<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Merge two or more requirement model"
            id="org.topcased.requirement.merge.mergeRequirement"
            name="Merge requirement">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.topcased.requirement.merge.mergeRequirement"
            icon="icons/sample.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.topcased.requirement.merge.handlers.LaunchMergeWizardHandler"
            commandId="org.topcased.requirement.merge.mergeRequirement">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.topcased.requirement.merge.mergeRequirement"
               label="&amp;Merge requirement"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 forcePluginActivation="true"
                                 property="org.topcased.requirement.merge.canMerge">
                           </test>
                        </and>
                     </iterate>
                     <count
                           value="(1-">
                     </count>
                  </with>
                  <with
                        variable="activePartId">
                     <equals
                           value="org.topcased.ui.navigator.view">
                     </equals>
                  </with>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.topcased.requirement.merge.testers.CanMergePropertyTester"
            id="org.topcased.requirement.merge.testers.CanMergePropertyTester"
            namespace="org.topcased.requirement.merge"
            properties="canMerge"
            type="org.eclipse.core.resources.IFile">
      </propertyTester>
   </extension>

</plugin>
